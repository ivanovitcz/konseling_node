<% layout('guru/layouts/master') %>
<% block('head').append('') %>
<!-- [ Container ] Mulai -->
<div class="pcoded-main-container">
  <div class="pcoded-content">
      <!-- [ Breadcumb ] Mulai -->
      <div class="page-header">
          <div class="page-block">
              <div class="row align-items-center">
                  <div class="col-md-12">
                      <div class="page-header-title">
                          <h5 class="m-b-10">Dashboard</h5>
                      </div>
                      <ul class="breadcrumb">
                          <li class="breadcrumb-item"><a href="#"><i class="feather icon-home"></i></a></li>
                          <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                      </ul>
                  </div>
              </div>
          </div>
      </div>
      <!-- [ Breadcumb ] Akhir -->

      <!-- [ Main Content ] Mulai -->
      <div class="row">
          <div class="col-sm-3">
              <div class="card">
                  <div class="card-body">
                      <div class="row align-items-center m-l-0">
                          <div class="col-auto">
                              <i class="icon feather icon-user f-30 text-c-purple"></i>
                          </div>
                          <div class="col-auto">
                              <h6 class="text-muted m-b-10">Total Karyawan</h6>
                              <h2 class="m-b-0">2</h2>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          <div class="col-sm-3">
              <div class="card">
                  <div class="card-body">
                      <div class="row align-items-center m-l-0">
                          <div class="col-auto">
                              <i class="icon feather icon-briefcase f-30 text-c-yellow"></i>
                          </div>
                          <div class="col-auto">
                              <h6 class="text-muted m-b-10">Total Jabatan</h6>
                              <h2 class="m-b-0">2</h2>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          <div class="col-sm-3">
              <div class="card">
                  <div class="card-body">
                      <div class="row align-items-center m-l-0">
                          <div class="col-auto">
                              <i class="icon feather icon-percent f-30 text-c-red"></i>
                          </div>
                          <div class="col-auto">
                              <h6 class="text-muted m-b-10">Persentase Kehadiran Bulan Ini</h6>
                              <h2 class="m-b-0">2</h2>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          <div class="col-sm-3">
              <div class="card">
                  <div class="card-body">
                      <div class="row align-items-center m-l-0">
                          <div class="col-auto">
                              <i class="icon feather icon-credit-card f-30 text-c-green"></i>
                          </div>
                          <div class="col-auto">
                              <h6 class="text-muted m-b-10">Total Gaji Karyawan Bulan Ini</h6>
                              <h2 class="m-b-0">2</h2>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>

      <div class="row">
          <div class="col-md-12">
              <div class="card table-card">
                  <div class="card-header">
                      <h5>Data Karyawan</h5>
                  </div>
                  <div class="card-body">
                      <div class="table-responsive">
                          <table class="table table-hover table-borderless">
                              <thead>
                                  <tr>
                                      <th>NO</th>
                                      <th>Nama</th>
                                      <th>Jabatan</th>
                                      <th>Kehadiran</th>
                                  </tr>
                              </thead>
                              <tbody>
                                <tr>
                                  <td>1</td>
                                  <td>AA</td>
                                  <td>X</td>
                                  <td>2</td>
                                </tr>
                              </tbody>
                          </table>
                      </div>
                      <div class="text-right  m-r-20">
                          <a href="#" class="b-b-primary text-primary">Lihat Data Karyawan</a>
                      </div>
                  </div>
              </div>
          </div>
      </div>
      <!-- [ Main Content ] Akhir -->
  </div>
</div>
<!-- [ Container ] Akhir -->

<% block('footer').append('') %>



