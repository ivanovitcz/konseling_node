<% layout('guru/layouts/master') %>
<% block('head').append('') %>
<div class="pcoded-main-container">
  <div class="pcoded-content">
      <!-- [ breadcrumb ] Mulai -->
      <div class="page-header">
          <div class="page-block">
              <div class="row align-items-center">
                  <div class="col-md-12">
                      <div class="page-header-title">
                          <h5 class="m-b-10">Data Guru BK</h5>
                      </div>
                      <ul class="breadcrumb">
                          <li class="breadcrumb-item"><a href="#"><i class="feather icon-home"></i></a></li>
                          <li class="breadcrumb-item"><a href="#">Data Guru BK</a></li>
                          <li class="breadcrumb-item"><a href="#!">Input Guru BK</a></li>
                      </ul>
                  </div>
              </div>
          </div>
      </div>
      <!-- [ breadcrumb ] Akhir -->
      <!-- [ Main Content ] Mulai -->
      <div class="row">
          <div class="col-md-12">
              <div class="card">
                  <div class="card-body">
                      <div class="row justify-content-end align-items-center">
                        <div class="col-md-10">
                          <h5>Formulir Data Diri Guru BK</h5>
                        </div>
                        <div class="col-md-2 text-right">
            
                        </div>
                      </div>
                  </div>
              </div>
              <div class="card">
                
                <div class="card-body px-4">
                  <form action="<%= baseURL %>guru/data-guru/input" id="form-input" method="POST" enctype="multipart/form-data">
                    <div class="row">
                      <div class="col-md-4">
                        <div class="form-group">
                          <label>Username</label>
                          <input type="text" class="form-control" name="username" id="username" required>
                        </div>
                        <div class="form-group">
                          <label>Password</label>
                          <input type="password" class="form-control" name="password" required>
                        </div>
                        <div class="form-group">
                          <label class="form-control-label">Gambar</label>
                          <input type="file" id="image-upload" name="image" class="form-control-file form-control form-control-alternative" accept="image/*">
                        </div>
                        <div class="form-group text-center">
                          <img src="#" id="image-preview" class="img-fluid rounded shadow" style="max-height: 300px" alt="">
                        </div>
                      </div>
                      <div class="col-md-8">
                        <div class="form-group">
                          <label>NIP</label>
                          <input type="text" class="form-control" name="nip" required>
                        </div>
                        <div class="form-group">
                          <label>Nama</label>
                          <input type="text" class="form-control" name="nama" required>
                        </div>
                        <div class="form-group">
                          <label for="agama">Agama</label>
                          <select name="agama" class="form-control" id="agama" required>
                            <option value="0">Islam</option>
                            <option value="1">Kristen</option>
                            <option value="2">Katholik</option>
                            <option value="3">Hindu</option>
                            <option value="4">Budha</option>
                            <option value="5">Konghucu</option>
                            <option value="6">Aliran Kepercayaan/Penghayat</option>
                          </select>
                        </div>
                        <div class="form-group">
                          <label>Jenis Kelamin</label>
                          <div class="row">
                            <div class="col-md-6">
                              <div class="form-check">
                                <input class="form-check-input" type="radio" id="jk1" name="jk" value="0" checked>
                                <label class="form-check-label" for="jk1">
                                  Laki-laki
                                </label>
                              </div>
                            </div>
                            <div class="col-md-6">
                              <div class="form-check">
                                <input class="form-check-input" type="radio" id="jk2" name="jk" value="1">
                                <label class="form-check-label" for="jk2">
                                  Perempuan
                                </label>
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="form-group">
                          <label>No Telepon</label>
                          <input type="text" class="form-control" name="notelp" required>
                        </div>
                        <div class="form-group">
                          <label for="alamat">Alamat</label>
                          <textarea name="alamat" class="form-control" id="alamat" rows="3" required></textarea>
                        </div>
                        <div class="form-group">
                          <label>Status</label>
                          <div class="row">
                            <div class="col-md-6">
                              <div class="form-check">
                                <input class="form-check-input" type="radio" id="status1" name="status" value="0">
                                <label class="form-check-label" for="status1">
                                  Tidak Tetap
                                </label>
                              </div>
                            </div>
                            <div class="col-md-6">
                              <div class="form-check">
                                <input class="form-check-input" type="radio" id="status2" name="status" value="1" checked>
                                <label class="form-check-label" for="status2">
                                  Tetap
                                </label>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                      
                    </div>
                    <button type="submit" class="btn btn-primary btn-block"><i class="feather mr-2 icon-plus"></i>Input Guru BK</button>
                  </form>
                  
                </div>
              </div>
          </div>
      </div>
      <!-- [ Main Content ] Akhir -->
  </div>
</div>

<%- block('footer').append("<script src='"+baseURL+"assets/js/form-guru-validate.js' type='text/javascript'></script>") %>

